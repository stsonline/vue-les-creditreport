.home .hero img
  max-width 450px!important

.screen-window
  position: relative;
  display: flex;
  flex-direction: column;
  min-width: 0;
  word-wrap: break-word;
  background-color: #fff;
  background-clip: border-box;
  border: none;
  border-radius: .75rem;
  box-shadow: 0 0.25rem 7rem -2.5rem #a2a2a2, 0 2rem 2.75rem -4rem #9e9e9e;

.browser-tab
  display: flex;
  padding: .35rem;
  background-color: #f5f9fc;
  border-top-left-radius: .5rem;
  border-top-right-radius: .5rem;

.browser-tab-option
  width: .8rem;
  height: .8rem;
  margin-right: .25rem;
  background-color: #fff;
  border-radius: 50%;

.bg-danger
  background-color: #e0465e!important;

.bg-warning
  background-color: #fbaa49!important;

.bg-success
  background-color: #1fc777!important;

.screen-window-body
  flex: 1 1 auto;
  min-height: 1px;
  overflow: hidden;
  padding: 1rem;
